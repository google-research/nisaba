load("@pip_deps//:requirements.bzl", "requirement")

package(
    default_applicable_licenses = [
    ],
    default_visibility = ["//visibility:public"],
)

licenses(["notice"])

exports_files([
    "grammars.bzl",
    "letter_languages.bzl",
])

