    name = "unicode_strings_to_tsv_bzl",
    srcs = ["unicode_strings_to_tsv.bzl"],
    parse_tests = False,
    visibility = ["//visibility:private"],
    deps = [
        "//testing/build_defs:text_proto_test",
        "//tools/build_defs/build_test",
    ],
)
