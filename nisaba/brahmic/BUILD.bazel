# Build packages for the Brahmic script APIs.

load("@nisaba_deps//:requirements.bzl", "requirement")

load(
    "//nisaba/utils:grammars.bzl",
    "nisaba_compile_grm_py",
    "nisaba_compile_multi_grm_py",
    "nisaba_grm_regression_test",
)
load(
    "//nisaba/brahmic:constant.bzl",
    "FIXED_RULE_SCRIPTS",
    "LANG_DIRS",
    "SCRIPTS",
)

package(default_visibility = ["//nisaba/brahmic:__subpackages__"])

licenses(["notice"])

nisaba_compile_grm_py(
    name = "iso",
    data = [
        "//nisaba/brahmic/data/script/{}:{}.tsv".format(script, file_name)
        for script in SCRIPTS
        for file_name in [
            "coda",
            "consonant",
            "standalone",
            "virama",
            "vowel",
            "vowel_sign",
        ]
    ] + ["//nisaba/brahmic/data/common:symbol.tsv"],
    visibility = ["//visibility:public"],
    deps = [
        ":util",
        "//nisaba/utils:file",
        "//nisaba/utils:rewrite",
        "@org_opengrm_pynini//pynini",
        "@org_opengrm_pynini//pynini/lib:pynutil",
    ],
)

nisaba_grm_regression_test(
    name = "iso_test",
    grammar = ":iso",
)

nisaba_compile_multi_grm_py(
    name = "fixed",
    data = [":sigma_utf8.far"] + [
        "//nisaba/brahmic/data/script/{}:fixed.tsv".format(script)
        for script in FIXED_RULE_SCRIPTS
    ],
    visibility = ["//visibility:public"],
    deps = [
        ":util",
        "//nisaba/utils:char",
        "//nisaba/utils:file",
        "//nisaba/utils:rule",
        "@org_opengrm_pynini//pynini",
    ],
)

nisaba_grm_regression_test(
    name = "fixed_test",
    grammar = ":fixed",
    token_type = "byte",
)

nisaba_compile_multi_grm_py(
    name = "nfc",
    data = [
        ":sigma_utf8.far",
    ] + ["//nisaba/brahmic/data/script/{}:nfc.tsv".format(script) for script in SCRIPTS],
    visibility = ["//visibility:public"],
    deps = [
        ":util",
        "//nisaba/utils:rule",
        "@org_opengrm_pynini//pynini",
    ],
)

nisaba_grm_regression_test(
    name = "nfc_test",
    grammar = ":nfc",
    token_type = "byte",
)

nisaba_grm_regression_test(
    name = "nfc_utf8_test",
    far_file_target = ":nfc_utf8.far",
    grammar = ":nfc",
    test_file = "testdata:nfc.tsv",
    token_type = "utf8",
)

py_library(
    name = "util",
    srcs = ["util.py"],
    srcs_version = "PY3",
    deps = [
        "//nisaba/utils:file",
        "@org_opengrm_pynini//pynini",
        "@org_opengrm_pynini//pynini/lib:byte",
        "@rules_python//python/runfiles",
        requirement("pandas"),
    ],
)

py_test(
    name = "util_test",
    size = "small",
    srcs = ["util_test.py"],
    data = ["//nisaba/brahmic/data/script/Beng:dead_consonant.tsv"],
    python_version = "PY3",
    srcs_version = "PY3",
    deps = [
        ":util",
        "//nisaba/utils:file",
        "@io_abseil_py//absl/testing:absltest",
    ],
)

py_library(
    name = "char_util",
    srcs = ["char_util.py"],
    data = [
        "//nisaba/brahmic/data/script/{}:{}.tsv".format(script, file_name)
        for script in SCRIPTS
        for file_name in [
            "accept",
            "coda",
            "consonant",
            "nfc",
            "standalone",
            "virama",
            "visual_rewrite",
            "vowel",
            "vowel_sign",
        ]
    ],
    srcs_version = "PY3",
    deps = [
        ":util",
        "//nisaba/utils:char",
        "//nisaba/utils:rewrite",
        "@org_opengrm_pynini//pynini",
        "@org_opengrm_pynini//pynini/lib:pynutil",
    ],
)

nisaba_compile_grm_py(
    name = "sigma",
    out = "sigma_utf8.far",
    deps = [
        ":char_util",
        ":util",
        "//nisaba/utils:char",
        "@org_opengrm_pynini//pynini",
    ],
)

py_test(
    name = "fst_properties_test",
    srcs = ["fst_properties_test.py"],
    data = [
        ":fixed.far",
        ":fixed_utf8.far",
        ":nfc.far",
        ":nfc_utf8.far",
        ":sigma_utf8.far",
        ":visual_norm.far",
        ":visual_norm_utf8.far",
        ":wellformed.far",
        ":wellformed_utf8.far",
    ],
    python_version = "PY3",
    srcs_version = "PY3",
    deps = [
        ":util",
        "//nisaba/utils:test_util",
        "@io_abseil_py//absl/testing:absltest",
        "@io_abseil_py//absl/testing:parameterized",
        "@org_opengrm_pynini//pynini",
    ],
)

py_test(
    name = "fst_randgen_test",
    size = "large",
    srcs = ["fst_randgen_test.py"],
    data = [
        ":fixed.far",
        ":fixed_utf8.far",
        ":nfc.far",
        ":nfc_utf8.far",
        ":visual_norm.far",
        ":visual_norm_utf8.far",
    ],
    python_version = "PY3",
    srcs_version = "PY3",
    deps = [
        ":util",
        "//nisaba/utils:test_util",
        "@io_abseil_py//absl/testing:absltest",
        "@io_abseil_py//absl/testing:parameterized",
        "@org_opengrm_pynini//pynini",
    ],
)

nisaba_compile_multi_grm_py(
    name = "visual_norm",
    data = [
        ":nfc.far",
        ":nfc_utf8.far",
        ":sigma_utf8.far",
    ] + [
        "//nisaba/brahmic/data/script/{}:{}.tsv".format(script, file_name)
        for script in SCRIPTS
        for file_name in [
            "consonant",
            "preserve",
            "visual_rewrite",
        ]
    ] + [
        "//nisaba/brahmic/data/lang/{}:{}.tsv".format(lang, file_name)
        for lang in LANG_DIRS
        for file_name in [
            "after_consonant",
            "before_consonant",
        ]
    ],
    visibility = ["//visibility:public"],
    deps = [
        ":char_util",
        ":util",
        "//nisaba/utils:char",
        "//nisaba/utils:file",
        "//nisaba/utils:rewrite",
        "//nisaba/utils:rule",
        "@org_opengrm_pynini//pynini",
        "@org_opengrm_pynini//pynini/lib:pynutil",
    ],
)

nisaba_grm_regression_test(
    name = "visual_norm_test",
    grammar = ":visual_norm",
    token_type = "byte",
)

nisaba_grm_regression_test(
    name = "visual_norm_utf8_test",
    far_file_target = ":visual_norm_utf8.far",
    grammar = ":visual_norm",
    test_file = "testdata:visual_norm.tsv",
    token_type = "utf8",
)

nisaba_compile_multi_grm_py(
    name = "wellformed",
    data = [
        "//nisaba/brahmic/data/script/{}:{}.tsv".format(script, file_name)
        for script in SCRIPTS
        for file_name in [
            "accept",
            "coda",
            "consonant",
            "preserve",
            "standalone",
            "virama",
            "vowel",
            "vowel_sign",
        ]
    ] + [
        "//nisaba/brahmic/data/common:symbol.tsv",
        "//nisaba/brahmic/data/script/Beng:dead_consonant.tsv",
        "//nisaba/brahmic/data/script/Mlym:dead_consonant.tsv",
        "//nisaba/brahmic/data/script/Mtei:dead_consonant.tsv",
    ],
    visibility = ["//visibility:public"],
    deps = [
        ":util",
        "//nisaba/utils:file",
        "@org_opengrm_pynini//pynini",
    ],
)

nisaba_grm_regression_test(
    name = "wellformed_test",
    grammar = ":wellformed",
    token_type = "byte",
)

nisaba_grm_regression_test(
    name = "wellformed_utf8_test",
    far_file_target = ":wellformed_utf8.far",
    grammar = ":wellformed",
    test_file = "testdata:wellformed.tsv",
    token_type = "utf8",
)

py_library(
    name = "py",
    srcs = ["__init__.py"],
    data = [
        ":iso.far",
        ":nfc.far",
        ":visual_norm.far",
        ":wellformed.far",
    ],
    srcs_version = "PY3",
    visibility = ["//visibility:public"],
    deps = [
        ":util",
        "//nisaba/utils:far",
        "@org_opengrm_pynini//pynini",
    ],
)

py_test(
    name = "py_test",
    size = "small",
    srcs = ["brahmic_test.py"],
    main = "brahmic_test.py",
    python_version = "PY3",
    srcs_version = "PY3",
    deps = [
        ":py",
        "@io_abseil_py//absl/testing:absltest",
    ],
)

cc_library(
    name = "far_cc",
    srcs = ["far.cc"],
    hdrs = ["far.h"],
    data = [
        ":iso.far",
        ":nfc.far",
        ":nfc_utf8.far",
        ":visual_norm.far",
        ":visual_norm_utf8.far",
        ":wellformed.far",
        ":wellformed_utf8.far",
    ],
    visibility = ["//visibility:public"],
    deps = [
        "//nisaba/port:integral_types",
        "//nisaba/utils:util",
        "@com_google_absl//absl/memory",
        "@com_google_absl//absl/strings",
        "@org_openfst//:fst",
        "@org_opengrm_thrax//:thrax",
    ],
)

cc_test(
    name = "far_cc_test",
    size = "small",
    srcs = ["far_test.cc"],
    deps = [
        ":far_cc",
        "@com_google_googletest//:gtest_main",
        "@org_openfst//:fst",
    ],
)

cc_library(
    name = "cc",
    srcs = ["grammar.cc"],
    hdrs = ["grammar.h"],
    data = [":far_files"],
    visibility = ["//visibility:public"],
    deps = [
        "//nisaba/utils:util",
        "@com_google_absl//absl/memory",
        "@com_google_absl//absl/strings",
        "@org_opengrm_thrax//:thrax",
    ],
)

cc_test(
    name = "cc_test",
    size = "small",
    srcs = ["grammar_test.cc"],
    deps = [
        ":cc",
        "@com_google_absl//absl/memory",
        "@com_google_googletest//:gtest_main",
    ],
)

filegroup(
   name = "far_files",
   srcs = [
       ":iso.far",
       ":nfc.far",
       ":visual_norm.far",
       ":wellformed.far",
   ],
)
